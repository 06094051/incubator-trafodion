>>set schema CAT1.SCHM;

--- SQL operation complete.
>>obey TEST_4_1_3(set_up);
>>INSERT INTO tab1A VALUES (1,2,3,4);

--- 1 row(s) inserted.
>>INSERT INTO tab1A VALUES (2,3,4,5);

--- 1 row(s) inserted.
>>
