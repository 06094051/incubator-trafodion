BEGIN {push @INC, $ENV{'MY_SPROOT'} . "/scripts/sdk/perl-lib" }

use strict;
use warnings;

use base qw(HealthCheck::Workflow);
use Common::Functions qw(:all);
use HealthCheck::Functions qw(:all);
use Module::Load;

sub main {
    my $wf = main->new(name=>'sp_check',
                    desc=>'Check the status of Seapilot processes',
                    routing_key=>'foundationlayer.instance.public.sp_check',
                    version=>'1.0.0');

    $wf->run();
}

sub pre_check {
    my $self = shift;

    return SUCCESS;
}

sub check {
    my $self = shift;

    load "$SPROOT/scripts/operations/platform/sp_check_op";

    my $op_SPCheck = SPCheckOp->new();

    $op_SPCheck->run();
    $self->add_operation($op_SPCheck);

}

main();

exit 0;
